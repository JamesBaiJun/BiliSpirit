<Window x:Class="BiliSpirit.ShellWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BiliSpirit"
        mc:Ignorable="d"
        Title="ShellWindow" Height="800" Width="400" 
        xmlns:view="clr-namespace:BiliSpirit.Views"
        FontFamily="{StaticResource YuanTi}"
        ResizeMode="NoResize" Background="Transparent" 
        AllowsTransparency="True" WindowStyle="None" WindowStartupLocation="CenterScreen">
    <Grid>
        <Border Margin="8 4 8 8" CornerRadius="4" Background="White" BorderBrush="{StaticResource PrimaryPinkColor}" BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect Color="#777777" BlurRadius="8" ShadowDepth="2"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid Grid.RowSpan="2">
                    <view:MainView/>
                </Grid>

                <Grid Background="Transparent" MouseLeftButtonDown="Grid_MouseLeftButtonDown"/>
            </Grid>
        </Border>
    </Grid>
</Window>
